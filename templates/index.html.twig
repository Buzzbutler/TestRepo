{% extends 'base2.html.twig' %}

{% block body %}
    <h3>Enclosures</h3>
    <table class="table-enclosures">
        <tbody>
        {% for enclosure in enclosures %}
            <tr id="enclosure-{{ enclosure.id }}">
                <td>Enclosure #{{ enclosure.id }}</td>
                <td>
                    Contains <strong>{{ enclosure.dinosaurCount }}</strong> dinosaur(s)
                </td>
                <td>
                    {% if enclosure.isSecurityActive %}
                        <strong>You Are Secured</strong>
                    {% else %}
                        <button class="button-alarm">Sound alarm</button>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% include('_newDinoForm.html.twig') %}
{% endblock %}